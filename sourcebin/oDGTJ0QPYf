package net.bnjrKemal.MissionV4;

import java.util.HashMap;
import java.util.UUID;

import org.bukkit.Material;

public class Data {
	
	private static HashMap<UUID, HashMap<Material, Integer>> breakblock = new HashMap<>();
		
	public static void addPointForBreakBlock(UUID uuid, Material material, int point) {

		HashMap<Material, Integer> seconderHashMap = new HashMap<>();
		
		if(breakblock.get(uuid) == null) {
			seconderHashMap.put(material, point);
			breakblock.put(uuid, seconderHashMap);
			return;
		}
		
		HashMap<Material, Integer> value = breakblock.get(uuid);
		if(value.get(material) == null) {
			value.put(material, point);
			return;
		}
		value.put(material, value.get(material) + point);
	}
	public static int getPointForBreakBlock(UUID uuid, Material material) {	
		HashMap<Material, Integer> value = breakblock.get(uuid);
		if(value == null) return 0;
		return value.get(material);
	}
}
